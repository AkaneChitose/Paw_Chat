<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashScreenActivity"
    android:background="@color/black">

    <View
        android:id="@+id/topView1"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/emerald"/>
    <View
        android:id="@+id/topView2"
        android:visibility="invisible"
        android:layout_toStartOf="@+id/topView1"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/sunFlower"/>

    <View
        android:id="@+id/topView3"
        android:visibility="invisible"
        android:layout_toStartOf="@+id/topView2"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/silver"/>

    <LinearLayout
        android:layout_below="@+id/topView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/appLogo"
            android:visibility="invisible"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_monochrome"/>

        <TextView
            android:id="@+id/appName"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paw &amp; Friend"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/slogan"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🐾My Best Paw 🐾"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_10sdp"/>
    </LinearLayout>

    <View
        android:id="@+id/bottomView1"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@color/belizeHole"/>
    <View
        android:id="@+id/bottomView2"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/bottomView1"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@color/alizarin"/>

    <View
        android:id="@+id/bottomView3"
        android:visibility="invisible"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="-82dp"
        android:layout_toEndOf="@+id/bottomView2"
        android:background="@color/carrot" />
</RelativeLayout>